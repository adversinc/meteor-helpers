{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es2019",
		"noImplicitAny": false,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "lib",
		"allowJs": true,
		"rootDir": "src/",

		"strict": true,
		"strictPropertyInitialization": false,
		"strictNullChecks": false,

		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}
